<%= simple_form_for(@informe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :jefe %>
    <%= f.input :fecha_visita %>
    <%= f.association :supervisor, :label_method => :apellidopaterno, :value_method => :id  %>
    <%= f.association :company, :label_method => :razonsocial, :value_method => :id  %>
    <%= f.association :student, :label_method => :nombreP, :value_method => :id  %>
    <%= f.input :aspectos_monitor %>
    <%= f.input :aspectos_estudiante %>
    <%= f.input :problemas_seguridad %>
    <%= f.input :soluciones_seguridad %>
    <%= f.input :problemas_estudiante %>
    <%= f.input :soluciones_estudiante %>
    <%= f.input :problemas_monitor %>
    <%= f.input :soluciones_monitor %>
    <%= f.input :problemas_puesto %>
    <%= f.input :soluciones_puesto %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
