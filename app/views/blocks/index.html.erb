<p id="notice"><%= notice %></p>

<h1>Listing Blocks</h1>

<table>
  <thead>
    <tr>
      <th>Specialty</th>
      <th>Semestre</th>
      <th>Ciclo academico</th>
      <th>Bloque</th>
      <th>Dia semana</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blocks.each do |block| %>
      <tr>
        <td><%= block.specialty %></td>
        <td><%= block.semestre %></td>
        <td><%= block.ciclo_academico %></td>
        <td><%= block.bloque %></td>
        <td><%= block.dia_semana %></td>
        <td><%= link_to 'Show', block %></td>
        <td><%= link_to 'Edit', edit_block_path(block) %></td>
        <td><%= link_to 'Destroy', block, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

