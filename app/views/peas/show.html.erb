<%- model_class = Pea -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:specialty_id) %>:</strong></dt>
  <dd><%= @pea.specialty_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ciclo) %>:</strong></dt>
  <dd><%= @pea.ciclo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:detalle) %>:</strong></dt>
  <dd><%= @pea.detalle %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              peas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pea_path(@pea), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pea_path(@pea),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
