<%= simple_form_for @app_user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :login %>
  <%= error_span(@app_user[:login]) %>
  <%= f.input :password %>
  <%= error_span(@app_user[:password]) %>
  <%= f.input :name %>
  <%= error_span(@app_user[:name]) %>
  <%= f.input :last_name %>
  <%= error_span(@app_user[:last_name]) %>
  <%= f.association :app_user_type, :label_method => :name, :value_method => :id %>
  
  <%= error_span(@app_user[:app_user_type_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                app_users_path, :class => 'btn btn-default' %>
<% end %>
