<%- model_class = Visit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:visit_date) %>:</strong></dt>
  <dd><%= @visit.visit_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estimated_time) %>:</strong></dt>
  <dd><%= @visit.estimated_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:motive) %>:</strong></dt>
  <dd><%= @visit.motive %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comments) %>:</strong></dt>
  <dd><%= @visit.comments %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
  <dd><%= @visit.company_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supervisor_id) %>:</strong></dt>
  <dd><%= @visit.supervisor_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:student_id) %>:</strong></dt>
  <dd><%= @visit.student_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:visit_status_id) %>:</strong></dt>
  <dd><%= @visit.visit_status_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              visits_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_visit_path(@visit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              visit_path(@visit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
