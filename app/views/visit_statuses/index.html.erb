<p id="notice"><%= notice %></p>

<h1>Listing Visit Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visit_statuses.each do |visit_status| %>
      <tr>
        <td><%= visit_status.name %></td>
        <td><%= link_to 'Show', visit_status %></td>
        <td><%= link_to 'Edit', edit_visit_status_path(visit_status) %></td>
        <td><%= link_to 'Destroy', visit_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

