<%= simple_form_for @student, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nombreP %>
  <%= error_span(@student[:nombreP]) %>
  <%= f.input :nombreS %>
  <%= error_span(@student[:nombreS]) %>
  <%= f.input :ApellidoPaterno %>
  <%= error_span(@student[:ApellidoPaterno]) %>
  <%= f.input :ApellidoMaterno %>
  <%= error_span(@student[:ApellidoMaterno]) %>
  <%= f.association :company %>
  <%= error_span(@student[:company_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                students_path, :class => 'btn btn-default' %>
<% end %>
